from django.db import models

# Create your models here.

class Info(models.Model):
    用户 = models.CharField(max_length=256)
    样本编号 = models.CharField(max_length=256)
    就诊编号 = models.CharField(max_length=256)
    是否家系 = models.BooleanField()
    家系编号 = models.CharField(max_length=256)
    照片 = models.ImageField(upload_to='images/照片/',verbose_name='照片')
    病理 = models.ImageField(upload_to='images/病理/',verbose_name='病理')
    姓名 = models.CharField(max_length=256)
    籍贯 = models.CharField(max_length=256)
    年龄 = models.CharField(max_length=256)
    性别 = models.CharField(max_length=10, choices=(('男', '男'), ('女', '女')), verbose_name="性别")
    身高 = models.CharField(max_length=256)
    体重 = models.CharField(max_length=256)
    婚否 = models.BooleanField()
    职业 = models.CharField(max_length=10, choices=(('农民', '农民'),
                                                     ('工人', '工人'),
                                                     ('教师', '教师'),
                                                     ('学生', '学生'),
                                                     ('办公室工作', '办公室工作'),
                                                     ('服务行业', '服务行业'),
                                                     ('商人', '商人'),
                                                     ('军人', '军人'),
                                                     ('科研人员', '科研人员'),
                                                     ('无业或退休', '无业或退休'),
                                                     ('其他', '其他')),verbose_name="职业")
    文化程度 = models.CharField(max_length=10, choices=(('文盲', '文盲'),
                                                        ('小学', '小学'),
                                                           ('初中', '初中'),
                                                           ('高中', '高中'),
                                                           ('专科', '专科'),
                                                           ('本科', '本科'),
                                                           ('研究生', '研究生')), verbose_name="文化程度")
    诊断疾病 = models.CharField(max_length=256)
    现住址 = models.CharField(max_length=256)
    联系电话 = models.CharField(max_length=256)
    调查日期 = models.DateTimeField(auto_now_add=True)
    调查员 = models.CharField(max_length=256)
    诊断医生 = models.CharField(max_length=256)
    主诉 = models.CharField(max_length=256)
    现病史 = models.CharField(max_length=256)
    皮损描述 = models.CharField(max_length=256)
    诱发或加重因素 = models.CharField(max_length=256)
    治疗经过 = models.CharField(max_length=256)
    皮肤镜检查 = models.CharField(max_length=256)
    组织病理学检查 = models.CharField(max_length=256)
    其他辅助检查 = models.CharField(max_length=256)
    #皮肤附属器受累情况
    指甲 = models.CharField(max_length=256)
    牙齿 = models.CharField(max_length=256)
    黏膜 = models.CharField(max_length=256)
    毛发 = models.CharField(max_length=256)
    汗腺 = models.CharField(max_length=256)
    皮脂腺 = models.CharField(max_length=256)
    皮肤附属其他 = models.CharField(max_length=256)
    #其他受累情况
    眼睛 = models.CharField(max_length=256)
    耳朵 = models.CharField(max_length=256)
    智力 = models.CharField(max_length=256)
    其他 = models.CharField(max_length=256)
    伴发疾病 = models.CharField(max_length=256)
    既往史 = models.CharField(max_length=256)
    家族史 = models.ImageField(upload_to='images/家族史/',verbose_name='家族史')
    初步诊断 = models.CharField(max_length=256)
    #标本类型
    血样 = models.CharField(max_length=10, choices=(('全血', '全血'),
                                                     ('血浆', '血浆'),
                                                     ('血清', '血清')), verbose_name='血样')
    组织 = models.CharField(max_length=10, choices=(('病理组织', '病理组织'),
                                                      ('皮损', '皮损'),
                                                      ('皮损旁', '皮损旁')), verbose_name='组织')
    标本类型其他 = models.CharField(max_length=256)
